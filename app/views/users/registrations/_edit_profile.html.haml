= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => 'form-horizontal' }) do |f|
  %br/
  = devise_error_messages!
  .form-group
    = f.label :email, 'E-Mail:', :class => 'control-label col-md-2'
    .col-md-8
      = f.text_field :email, :class => 'form-control'
  .form-group
    = f.label :first_name, 'First Name:', :class => 'control-label col-md-2'
    .col-md-8
      = f.text_field :first_name, :class => 'form-control'
  .form-group
    = f.label :last_name, 'Last Name:', :class => 'control-label col-md-2'
    .col-md-8
      = f.text_field :last_name, :class => 'form-control'
  .form-group
    = f.label :age, 'Age', :class => 'control-label col-md-2'
    .col-md-8
      = f.text_field :age, :class => 'form-control'
  .form-group
    = f.label :bio, 'Bio:', :class => 'control-label col-md-2'
    .col-md-8
      = f.text_field :bio, :class => 'form-control'
  .form-group
    = f.label :current_password, :class => 'control-label col-md-2'
    .col-md-8
      = f.password_field :current_password, :class => 'form-control'
  .form-group
    .form-actions.col-md-offset-2.col-md-8
      = f.submit "Save", :class => 'btn btn-primary'